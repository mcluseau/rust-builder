#! /bin/bash
tag=1.90.0

echo "*** building tag $tag"

set -ex
img=mcluseau/rust:$tag

docker build --pull --push --network host -t $img --build-arg tag=${tag} .

cat Dockerfile Dockerfile.onbuild >Dockerfile.tmp
img=$img-onbuild
docker build --push --network host -t $img --build-arg tag=${tag} . --file Dockerfile.tmp

git commit -am "version $tag"
git tag -am $tag $tag

